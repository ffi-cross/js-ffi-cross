{
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string"],
        "target": "es2019",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "baseUrl": "./",
        "typeRoots": [
            "./types"
        ],
        "types": [],
        "noEmit": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "types/**/*ts",
        "test/typescript/**/*.ts"
    ],
    "files": [
        "types/index.d.ts"
    ]
}
